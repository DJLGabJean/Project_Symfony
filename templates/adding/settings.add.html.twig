{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="../../assets/dist/output.css">
{% endblock %}

{% block title %}Ajout de paramètres{% endblock %}

{% block body %}
<div class="flex items-center justify-center h-screen bg-white">
    <div class="w-full max-w-md p-8 space-y-4 bg-gray-100 rounded-lg shadow-2xl">
        <h2 class="text-3xl font-bold text-center">Ajout de paramètres</h2>

        {{ form_start(settingsForm) }}
            {{ form_row(settingsForm.date) }}
            {{ form_row(settingsForm.state) }}
            {{ form_row(settingsForm.theme) }}
            {{ form_row(settingsForm.allowComments) }}
            {{ form_row(settingsForm.forum) }}
            <button type="submit">Soumettre</button>
        {{ form_end(settingsForm) }}

    </div>
</div>
{% endblock %}